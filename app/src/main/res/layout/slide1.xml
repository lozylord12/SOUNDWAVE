<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/slide1_layout_width"
            android:layout_height="@dimen/slide1_layout_height"
            android:src="@mipmap/wavebnt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_1_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide1_text_size_FuBiz"
            android:textStyle="bold"
            android:fontFamily="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/slide1_textView_margin_top"
            android:paddingLeft="@dimen/slide1_textView_padding"
            android:paddingRight="@dimen/slide1_textView_padding"
            android:text="@string/slide_1_desc"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide1_text_size_1"
            android:fontFamily="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:paddingLeft="@dimen/slide1_textView_padding"
            android:paddingRight="@dimen/slide1_textView_padding"
            android:text="@string/slide_1_desc_child"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide1_text_size_2"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</RelativeLayout>