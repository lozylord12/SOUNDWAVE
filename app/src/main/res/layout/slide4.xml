<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_third">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/slide4_image"
            android:layout_height="@dimen/slide4_image"
            android:src="@drawable/zen_brush" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_4_title"
            android:layout_marginTop="@dimen/slide4_margin_top"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide4_text_size_1"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/slide4_text_view_padding"
            android:paddingRight="@dimen/slide4_text_view_padding"
            android:text="@string/slide_4_desc"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide4_text_size_2" />

    </LinearLayout>
</RelativeLayout>