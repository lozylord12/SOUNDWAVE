<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ev.gone.fubiz">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.SliderActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.AlphaActivityOnline"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.LoadingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.AlphaSettingActivityOnline"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.MenuCircleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.SettingCountdown"
            android:screenOrientation="portrait" />
        <!-- <activity android:name=".Views.SliderActivity"></activity> -->
        <activity
            android:name=".Views.AlphaActivityOffline"
            android:screenOrientation="portrait" />
        <activity android:name=".Views.AlphaSettingActivityOffline" />
        <activity android:name=".Views.ListSongOfflineDownloaded" />
    </application>

</manifest>